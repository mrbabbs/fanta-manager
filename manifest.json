{
  "manifest_version": 2,

  "name": "Fanta Manager",
  "description": "Manage your fantacalcio",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "assets/images/browser-icon.png",
    "default_popup": "src/html/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.gazzetta.it/*/prob_form*"],
      "js": ["assets/js/lodash.min.js", "src/js/gazzetta.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
